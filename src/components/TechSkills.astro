              <div class="h-2 rounded-full gradient-bg" style="width: 75%;"></div>
            </div>
          </div>
          <div class="skill-item">
            <div class="flex justify-between mb-1">
              <span class="text-sm font-medium" style="color: var(--text-primary);">Tailwind CSS</span>
              <span class="text-xs" style="color: var(--text-muted);">90%</span>
            </div>
            <div class="h-2 rounded-full" style="background-color: var(--bg-tertiary);">
              <div class="h-2 rounded-full gradient-bg" style="width: 90%;"></div>
            </div>
          </div>
          <div class="skill-item">
            <div class="flex justify-between mb-1">
              <span class="text-sm font-medium" style="color: var(--text-primary);">Material UI</span>
              <span class="text-xs" style="color: var(--text-muted);">80%</span>
            </div>
            <div class="h-2 rounded-full" style="background-color: var(--bg-tertiary);">
              <div class="h-2 rounded-full gradient-bg" style="width: 80%;"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Backend Widget -->
      <div class="widget p-6">
        <div class="widget-header">
          <span class="widget-title">Backend</span>
        </div>
        <div class="space-y-4">
          <div class="skill-item">
            <div class="flex justify-between mb-1">
              <span class="text-sm font-medium" style="color: var(--text-primary);">Laravel</span>
              <span class="text-xs" style="color: var(--text-muted);">90%</span>
            </div>
            <div class="h-2 rounded-full" style="background-color: var(--bg-tertiary);">
              <div class="h-2 rounded-full gradient-bg" style="width: 90%;"></div>
            </div>
          </div>
          <div class="skill-item">
            <div class="flex justify-between mb-1">
              <span class="text-sm font-medium" style="color: var(--text-primary);">Node.js</span>
              <span class="text-xs" style="color: var(--text-muted);">75%</span>
            </div>
            <div class="h-2 rounded-full" style="background-color: var(--bg-tertiary);">
              <div class="h-2 rounded-full gradient-bg" style="width: 75%;"></div>
            </div>
          </div>
          <div class="skill-item">
            <div class="flex justify-between mb-1">
              <span class="text-sm font-medium" style="color: var(--text-primary);">Express.js</span>
              <span class="text-xs" style="color: var(--text-muted);">70%</span>
            </div>
            <div class="h-2 rounded-full" style="background-color: var(--bg-tertiary);">
              <div class="h-2 rounded-full gradient-bg" style="width: 70%;"></div>
            </div>
          </div>
          <div class="skill-item">
            <div class="flex justify-between mb-1">
              <span class="text-sm font-medium" style="color: var(--text-primary);">Inertia.js</span>
