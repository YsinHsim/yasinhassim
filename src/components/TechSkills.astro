<section id="skills" class="px-6 py-12">
  <div class="max-w-7xl mx-auto">
    <p class="section-label">Expertise</p>
    <h2 class="text-3xl md:text-4xl font-bold mb-8" style="color: var(--text-primary);">
      Technologies & <span class="gradient-text">Skills</span>
    </h2>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      
      <!-- Languages Widget -->
      <div class="widget p-6">
        <div class="widget-header">
          <span class="widget-title">Languages</span>
        </div>
        <div class="space-y-4">
          <div class="skill-item">
            <div class="flex justify-between mb-1">
              <span class="text-sm font-medium" style="color: var(--text-primary);">JavaScript</span>
              <span class="text-xs" style="color: var(--text-muted);">90%</span>
            </div>
            <div class="h-2 rounded-full" style="background-color: var(--bg-tertiary);">
              <div class="h-2 rounded-full gradient-bg" style="width: 90%;"></div>
            </div>
          </div>
          <div class="skill-item">
            <div class="flex justify-between mb-1">
              <span class="text-sm font-medium" style="color: var(--text-primary);">PHP</span>
              <span class="text-xs" style="color: var(--text-muted);">85%</span>
            </div>
            <div class="h-2 rounded-full" style="background-color: var(--bg-tertiary);">
              <div class="h-2 rounded-full gradient-bg" style="width: 85%;"></div>
            </div>
          </div>
          <div class="skill-item">
            <div class="flex justify-between mb-1">
              <span class="text-sm font-medium" style="color: var(--text-primary);">Python</span>
              <span class="text-xs" style="color: var(--text-muted);">70%</span>
            </div>
            <div class="h-2 rounded-full" style="background-color: var(--bg-tertiary);">
              <div class="h-2 rounded-full gradient-bg" style="width: 70%;"></div>
            </div>
          </div>
          <div class="skill-item">
            <div class="flex justify-between mb-1">
              <span class="text-sm font-medium" style="color: var(--text-primary);">C++</span>
              <span class="text-xs" style="color: var(--text-muted);">65%</span>
            </div>
            <div class="h-2 rounded-full" style="background-color: var(--bg-tertiary);">
              <div class="h-2 rounded-full gradient-bg" style="width: 65%;"></div>
            </div>
          </div>
          <div class="skill-item">
            <div class="flex justify-between mb-1">
              <span class="text-sm font-medium" style="color: var(--text-primary);">Java</span>
              <span class="text-xs" style="color: var(--text-muted);">60%</span>
            </div>
            <div class="h-2 rounded-full" style="background-color: var(--bg-tertiary);">
              <div class="h-2 rounded-full gradient-bg" style="width: 60%;"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Frontend Widget -->
      <div class="widget p-6">
        <div class="widget-header">
          <span class="widget-title">Frontend</span>
        </div>
        <div class="space-y-4">
          <div class="skill-item">
            <div class="flex justify-between mb-1">
              <span class="text-sm font-medium" style="color: var(--text-primary);">React</span>
              <span class="text-xs" style="color: var(--text-muted);">85%</span>
            </div>
            <div class="h-2 rounded-full" style="background-color: var(--bg-tertiary);">
              <div class="h-2 rounded-full gradient-bg" style="width: 85%;"></div>
            </div>
          </div>
          <div class="skill-item">
            <div class="flex justify-between mb-1">
              <span class="text-sm font-medium" style="color: var(--text-primary);">Vue / Nuxt</span>
