    </div>

    <!-- Quick Actions -->
    <div class="flex flex-wrap gap-4 justify-center md:justify-start">
      <a href="#work" class="btn-primary">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
