          <!-- Tech Stack -->
          <div>
            <p class="text-xs text-muted mb-2">Tech Stack</p>
            <div class="flex flex-wrap gap-2">
              <span class="skill-badge">Laravel</span>
              <span class="skill-badge">React</span>
