          </div>

          <!-- CTA Buttons -->
          <div class="flex gap-2 pt-2">
            <a href="#contact" class="btn-primary flex-1">
              Contact Me
            </a>
            <a href="#work" class="btn-secondary flex-1">
              View Work
            </a>
          </div>
        </div>
      </div>

      <!-- Stats Widget -->
      <div class="widget md:col-span-2 p-6 animate-fade-in" style="animation-delay: 0.1s;">
        <div class="widget-header">
          <span class="widget-title">Statistics</span>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="stat-card">
            <span class="stat-value">3+</span>
            <span class="stat-label">Years Experience</span>
          </div>
          <div class="stat-card">
            <span class="stat-value">8+</span>
            <span class="stat-label">Projects</span>
          </div>
          <div class="stat-card">
            <span class="stat-value">17</span>
            <span class="stat-label">Estates</span>
          </div>
          <div class="stat-card">
            <span class="stat-value">∞</span>
            <span class="stat-label">Caffeine Addiction</span>
          </div>
        </div>
      </div>

      <!-- Tech Stack Widget -->
      <div class="widget md:col-span-2 p-6 animate-fade-in" style="animation-delay: 0.3s;">
        <div class="widget-header">
          <span class="widget-title">Technologies</span>
        </div>
        <div class="flex flex-wrap gap-2">
          <span class="skill-badge">
            <span class="w-2 h-2 rounded-full" style="background: #3b82f6;"></span>
            JavaScript
          </span>
          <span class="skill-badge">
            <span class="w-2 h-2 rounded-full" style="background: #f59e0b;"></span>
            PHP
          </span>
          <span class="skill-badge">
