                <a href="mailto:yasinhassim43@gmail.com" class="text-sm font-medium hover:underline text-accent">yasinhassim43@gmail.com</a>
              </div>
            </div>
          </div>

          <!-- Status -->
          <div class="flex items-center gap-2 p-3 rounded-xl" style="background: rgba(34, 197, 94, 0.1);">
            <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
