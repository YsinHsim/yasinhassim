<section id="contact" class="px-6 py-12">
  <div class="max-w-4xl mx-auto">
    <p class="section-label">Connection</p>
    <h2 class="text-3xl md:text-4xl font-bold mb-8" style="color: var(--text-primary);">
      Let's <span class="gradient-text">Connect</span>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      
      <!-- WhatsApp Card -->
      <a href="https://wa.me/+60128507469?text=Hi there! I just saw your portfolio." target="_blank" class="widget p-6 group text-center cursor-pointer">
        <div class="w-16 h-16 mx-auto mb-4 rounded-2xl flex items-center justify-center transition-transform group-hover:scale-110" style="background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);">
          <img src="/contact/whatsapp.png" alt="WhatsApp" class="w-8 h-8" />
        </div>
        <h3 class="font-semibold mb-1" style="color: var(--text-primary);">WhatsApp</h3>
        <p class="text-xs" style="color: var(--text-muted);">Chat with me</p>
      </a>

      <!-- GitHub Card -->
      <a href="https://github.com/YsinHsim" target="_blank" class="widget p-6 group text-center cursor-pointer">
        <div class="w-16 h-16 mx-auto mb-4 rounded-2xl flex items-center justify-center transition-transform group-hover:scale-110" style="background: linear-gradient(135deg, #475569 0%, #334155 100%);">
          <img src="/contact/github.png" alt="GitHub" class="w-8 h-8" />
        </div>
        <h3 class="font-semibold mb-1" style="color: var(--text-primary);">GitHub</h3>
        <p class="text-xs" style="color: var(--text-muted);">View my code</p>
      </a>

      <!-- Email Card -->
      <a href="mailto:yasinhassim43@gmail.com" class="widget p-6 group text-center cursor-pointer">
        <div class="w-16 h-16 mx-auto mb-4 rounded-2xl flex items-center justify-center transition-transform group-hover:scale-110" style="background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);">
          <img src="/contact/gmail.png" alt="Email" class="w-8 h-8" />
        </div>
        <h3 class="font-semibold mb-1" style="color: var(--text-primary);">Email</h3>
        <p class="text-xs" style="color: var(--text-muted);">Send a message</p>
      </a>

    </div>

    <!-- Command Widget -->
    <div class="widget p-6">
      <div class="widget-header">
        <span class="widget-title">Send Message</span>
      </div>
      <div class="text-center py-8">
        <div class="w-16 h-16 mx-auto mb-4 rounded-2xl flex items-center justify-center" style="background: var(--accent-gradient);">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-2" style="color: var(--text-primary);">Ready to Collaborate?</h3>
        <p class="mb-6 max-w-md mx-auto" style="color: var(--text-secondary);">
          Whether you have a question, a project idea, or just want to say hi - feel free to reach out!
        </p>
        <a href="mailto:yasinhassim43@gmail.com" class="btn-primary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          yasinhassim43@gmail.com
        </a>
      </div>
    </div>

  </div>
</section>
