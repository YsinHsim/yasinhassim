---
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

// Get latest 3 posts
const latestPosts = blogPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout
  title="Yasin Hassim - IT Technician | Software Developer"
  description="Portfolio of Muhammad Yasin Abdul Hassim, an IT Technician and Software Developer specializing in Laravel, React, and full-stack development."
>
  <!-- Hero Section -->
  <section class="px-6 py-20 md:py-32">
    <div class="max-w-4xl mx-auto text-center">
      <p class="section-label mb-4">Welcome</p>
      <h1 class="text-4xl md:text-6xl font-bold mb-6 text-primary">
        Hi, I'm <span class="gradient-text">Yasin Hassim</span>
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-secondary">
        IT Technician <span class="text-muted">•</span> Software Developer
      </p>
      <p class="text-lg mb-12 max-w-2xl mx-auto text-secondary">
        I build stuff. Welcome to my personal corner of the internet.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-wrap gap-4 justify-center">
        <a href="/portfolio" class="btn-primary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          View Portfolio
        </a>
        <a href="/blog" class="btn-secondary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-9-3h19"/>
          </svg>
          Read Blog
        </a>
        <a href="mailto:yasinhassim43@gmail.com" class="btn-secondary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          Contact Me
        </a>
      </div>
    </div>
  </section>

  <!-- Quick Links Section -->
  <section class="px-6 py-12 bg-secondary">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Portfolio Card -->
        <a href="/portfolio" class="widget p-6 transition-transform hover:scale-105 cursor-pointer">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center bg-gradient">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-primary">Portfolio</h3>
          </div>
          <p class="text-sm text-secondary">
            Explore my projects and work experience. From web applications to IT solutions.
          </p>
        </a>

        <!-- Blog Card -->
        <a href="/blog" class="widget p-6 transition-transform hover:scale-105 cursor-pointer">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center bg-gradient">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-9-3h19"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-primary">Blog</h3>
          </div>
          <p class="text-sm text-secondary">
            Read my thoughts on technology, development and random things.
          </p>
        </a>

        <!-- Contact Card -->
        <a href="mailto:yasinhassim43@gmail.com" class="widget p-6 transition-transform hover:scale-105 cursor-pointer">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center bg-gradient">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-primary">Contact</h3>
          </div>
          <p class="text-sm text-secondary">
            Get in touch for collaborations, opportunities, or just to say hello.
          </p>
        </a>
      </div>
    </div>
  </section>

  <!-- Latest Blog Posts Section -->
  {latestPosts.length > 0 && (
    <section class="px-6 py-12">
      <div class="max-w-6xl mx-auto">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-2xl font-bold text-primary">Latest Posts</h2>
          <a href="/blog" class="text-sm font-medium hover:underline text-accent">
            View all →
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {latestPosts.map((post) => (
            <a href={`/blog/${post.slug}`} class="widget p-6 transition-transform hover:scale-105 cursor-pointer">
              <div class="flex items-center gap-2 mb-3">
                <span class="text-xs px-2 py-1 rounded-full bg-tertiary text-muted">
                  {post.data.tags[0] || 'General'}
                </span>
                <span class="text-xs text-muted">
                  {post.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                </span>
              </div>
              <h3 class="text-lg font-bold mb-2 text-primary">{post.data.title}</h3>
              <p class="text-sm text-secondary">{post.data.description}</p>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- About Preview Section -->
  <section class="px-6 py-12 bg-secondary">
    <div class="max-w-4xl mx-auto text-center">
      <p class="section-label mb-4">About Me</p>
      <h2 class="text-3xl font-bold mb-6 text-primary">
        Passionate about technology and problem-solving
      </h2>
      <p class="text-lg mb-8 text-secondary">
        I'm an IT Technician and Software Developer based in Sabah, Malaysia.
        I specialize in building full-stack applications with Laravel, React, and modern web technologies.
      </p>
      <a href="/portfolio" class="btn-secondary">
        Learn More About Me
      </a>
    </div>
  </section>

  <Footer />
</BaseLayout>
