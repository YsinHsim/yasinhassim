---
import BaseLayout from '@layouts/BaseLayout.astro';
import Footer from '@components/Footer.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

const sortedPosts = blogPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const allTags = [...new Set(blogPosts.flatMap(post => post.data.tags))];
---

<BaseLayout
  title="Blog - Yasin Hassim"
  description="Read my thoughts on technology, development, and random things."
>
  <section class="px-6 py-12">
    <div class="max-w-4xl mx-auto">
      <p class="section-label mb-4">Blog</p>
      <h1 class="text-4xl font-bold mb-4 text-primary">
        Thoughts &amp; <span class="gradient-text">Articles</span>
      </h1>
      <p class="text-lg text-secondary">
        Writing about technology, development, and random things.
      </p>
    </div>
  </section>

  {allTags.length > 0 && (
    <section class="px-6 py-4">
      <div class="max-w-4xl mx-auto">
        <div class="flex flex-wrap gap-2">
          {allTags.map((tag) => (
            <span class="text-xs px-3 py-1 rounded-full bg-tertiary text-muted">
              {tag}
            </span>
          ))}
        </div>
      </div>
    </section>
  )}

  <section class="px-6 py-12">
    <div class="max-w-4xl mx-auto">
      {sortedPosts.length > 0 ? (
        <div class="space-y-6">
          {sortedPosts.map((post) => (
            <a href={`/blog/${post.slug}`} class="widget p-6 block transition-transform hover:scale-[1.02] cursor-pointer">
              <div class="flex items-center gap-3 mb-3">
                <span class="text-xs px-2 py-1 rounded-full bg-tertiary text-muted">
                  {post.data.tags[0] || 'General'}
                </span>
                <span class="text-xs text-muted">
                  {post.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                </span>
              </div>
              <h2 class="text-xl font-bold mb-2 text-primary">{post.data.title}</h2>
              <p class="text-sm text-secondary">{post.data.description}</p>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full flex items-center justify-center bg-tertiary">
            <svg class="w-8 h-8 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-9-3h19"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold mb-2 text-primary">No posts yet</h3>
          <p class="text-secondary">Check back soon for new content!</p>
        </div>
      )}
    </div>
  </section>

  <Footer />
</BaseLayout>
